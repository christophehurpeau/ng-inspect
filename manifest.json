{
  "manifest_version": 2,

  "name": "ng-inspect",
  "description": "Inspect the angular scope",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["main.js"]
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["injectscript.js"]
    }
  ]
}
